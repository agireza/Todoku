<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/ui_lightness/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.11.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    @*<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.tmpl.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.number.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ApplicationMethod.js")" type="text/javascript"></script>
</head>

<script id="ZipCodeTemplate" type="text/x-jquery-tmpl">
    <input type="hidden" id="hdnSelectedValue" value=""/>
    <table>
        <tr>
            <td>Provinsi</td>
            <td>:</td>
            <td>
                <select class="cboProvince" style="width:100%;">
                    {{each combobox}}
                        <option value="${StandardCodeID}" {{if ProvinceVal == StandardCodeID}} selected="selected"{{/if}}>${StandardCodeName}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <td>Kab / Kota</td>
            <td>:</td>
            <td>
                <select class="cboRegency" style="width:100%;">
                    {{each cboRegency}}
                        <option value="${Regency}" {{if RegencyVal == Regency}} selected="selected"{{/if}}>${Regency}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
        <tr>
            <td>Kecamatan</td>
            <td>:</td>
            <td>
                <select class="cboDistrict" style="width:100%;">
                    {{each cboDistrict}}
                        <option value="${District}" {{if DistrictVal == District}} selected="selected"{{/if}}>${District}</option>
                    {{/each}}
                </select>
            </td>
        </tr>
    </table>
    <div style="overflow-y:auto; height:275px;">
        <table class="grdView SelectMode">
            <thead>
                <tr>
                    <td>Kode Pos</td>
                    <td>Kelurahan</td>
                    <td>Kecamatan</td>
                    <td>Kabupaten / Kota</td>
                    <td>Provinsi</td>
                </tr>
            </thead>
            <tbody>
                {{each lstZipCode}}
                    <tr>
                        <td><input type="hidden" class="keyField" value="${ZipID}" />${ZipNumber}</td>
                        <td>${SubDistrict}</td>
                        <td>${District}</td>
                        <td>${Regency}</td>
                        <td>${ScProvince.StandardCodeName}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</script>

<script id="AddressTemplate" type="text/x-jquery-tmpl">
    <input type="hidden" id="hdnSelectedValue" value=""/>
    <div style="overflow-y:auto; height:275px;">
        <table class="grdView SelectMode">
            <thead>
                <tr>
                    <td>Nama</td>
                    <td>Alamat</td>
                </tr>
            </thead>
            <tbody>
                {{each lstAddress}}
                    <tr>
                        <td>
                            <input type="hidden" class="keyField" value="${ShippingID}" />
                            ${AddressName}
                        </td>
                        <td>
                            Provinsi : ${ScProvince.StandardCodeName}<br/>
                            Kota : ${City}<br/>
                            Kode Pos : ${ZipCode}<br/>
                            Alamat : ${Address}
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</script>

<body>
    <div id="wrapper">
		<div id="WebsiteHeader">
            @{Html.RenderAction("Header", "PartialView", new { area =""});}
        </div>
		<div id="WebsiteBody">
            <div id="LeftPanel" style="width:200px;">
                @{Html.RenderAction("Menu", "PartialView", new { area = "" });}
                @*@if (ViewBag.PartialView != null){
                    String partialView = ViewBag.PartialView.ToString();
                    Html.RenderAction(partialView, "PartialView", new { area = "", filterExpression = ViewBag.filterExpression });
                }*@
            </div>
            <div id="MainPanel">
                @{Html.RenderAction("Breadcrumbs", "PartialView", new {area = ""});}
                @RenderBody()
            </div>
            <div id="RightPanel"></div>
            <div id="WebsiteFooter">
                <div class="footerItem">
                    <h3>Todoku</h3>
                    <ul>
                        <li><a href="#">Tentang Kami</a></li>
                        <li><a href="#">Daftar Brand</a></li>
                        <li><a href="#">Todoku Directory</a></li>
                        <li><a href="#">Produk Populer</a></li>
                    </ul>
                </div>
            </div>    
        </div>
	</div>
</body>
</html>

<div id="ZipCodeDialog" />
<div id="AddressDialog" />


