@model Todoku.Models.RegisterModel
           
@{
    ViewBag.Title = "Todoku";
}

<h2>Registrasi</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="registration">
    <p>
        Password harus memiliki panjang minimum @Membership.MinRequiredPasswordLength
    </p>

    @using (Html.BeginForm("Register", "Account"))
    {
        @Html.ValidationSummary(true, "Account creation was     unsuccessful. Please correct the errors and try again.")
        <div>
            <fieldset>
                <legend>Account Information</legend>

                <div class="editor-label">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.Email)
                    @Html.ValidationMessageFor(m => m.Email)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.ConfirmPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.PasswordQuestion)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.PasswordQuestion)
                    @Html.ValidationMessageFor(m => m.PasswordQuestion)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.PasswordAnswer)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.PasswordAnswer)
                    @Html.ValidationMessageFor(m => m.PasswordAnswer)
                </div>
            </fieldset>
        </div>
        
        <div style="display:none">
            <fieldset>
                <legend>Personal Information</legend>
                
                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.Fullname)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.userprofile.Fullname)
                    @Html.ValidationMessageFor(m => m.userprofile.Fullname)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.DateOfBirth)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.userprofile.DateOfBirth, new { @class = "datepicker" })
                    @Html.ValidationMessageFor(m => m.userprofile.DateOfBirth)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.Gender)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("userprofile.Gender", (SelectList)ViewBag.Gender)
                    @Html.ValidationMessageFor(m => m.userprofile.Gender)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.address.Country)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("userprofile.address.Country", (SelectList)ViewBag.Country)
                    @Html.ValidationMessageFor(m => m.userprofile.address.Country)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.address.Province)
                </div>
                <div class="editor-field">
                    @Html.DropDownList("userprofile.address.Province", (SelectList)ViewBag.Province)
                    @Html.ValidationMessageFor(m => m.userprofile.address.Province)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.address.City)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.userprofile.address.City)
                    @Html.ValidationMessageFor(m => m.userprofile.address.City)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.address.Address)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.userprofile.address.Address)
                    @Html.ValidationMessageFor(m => m.userprofile.address.Address)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(m => m.userprofile.address.Phone)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(m => m.userprofile.address.Phone)
                    @Html.ValidationMessageFor(m => m.userprofile.address.Phone)
                </div>
                <p>
                    <input type="submit" value="Register" />
                </p>
            </fieldset>
        </div>
    }
</div>
