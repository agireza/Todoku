@model Todoku.Models.UserProfile
           
@{
    ViewBag.Title = "Todoku";
 }

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
</script>

<h2>User Profile</h2>

<div class="tabs" id="tab-userprofile">
    <ul>
        <li><a href="#tabs-profil">Profil</a></li>
        <li><a href="#tabs-shipping">Pengiriman</a></li>
    </ul>

    <div id="tabs-profil">        
        @using (Html.BeginForm("Edit", "Home"))
        {
            @Html.ValidationSummary(true, "Profil tidak bisa disimpan")
            <div>
                <fieldset>
                    <legend>Account Information</legend>
                    
                    <div class="editor-label">
                        @Html.LabelFor(m => m.Prefix)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("Prefix")
                        @Html.ValidationMessageFor(m => m.Prefix)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Fullname)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.Fullname)
                        @Html.ValidationMessageFor(m => m.Fullname)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.DateOfBirth)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.DateOfBirth)
                        @Html.ValidationMessageFor(m => m.DateOfBirth)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.Gender)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("Gender")
                        @Html.ValidationMessageFor(m => m.Gender)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Country)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("address.Country", (SelectList)ViewBag.Country)
                        @Html.ValidationMessageFor(m => m.address.Country)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.ZipCode)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.ZipCode, "ZipCode")
                        @Html.ValidationMessageFor(m => m.address.ZipCode)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Province)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownList("address.Province", (SelectList)ViewBag.Province)
                        @Html.ValidationMessageFor(m => m.address.Province)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.City)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.City)
                        @Html.ValidationMessageFor(m => m.address.City)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Address)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.Address)
                        @Html.ValidationMessageFor(m => m.address.Address)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Email)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.Email)
                        @Html.ValidationMessageFor(m => m.address.Email)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Email2)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.Email2)
                        @Html.ValidationMessageFor(m => m.address.Email2)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Phone)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.Phone)
                        @Html.ValidationMessageFor(m => m.address.Phone)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(m => m.address.Handphone)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(m => m.address.Handphone)
                        @Html.ValidationMessageFor(m => m.address.Handphone)
                    </div>
                    <p>
                        <input type="submit" value="simpan" />
                    </p>
                </fieldset>
            </div>
        }
    </div>
    
    <div id="tabs-shipping">
        <p>@Html.ActionLink("Tambah", "AddShippingAddress")</p>
        <table class="grdView">
            <colgroup>
                <col width="300px" />
                <col />
                <col width="220px" />
            </colgroup>
            <thead>
                <tr>
                    <td>Keterangan</td>
                    <td>Alamat</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.shippings != null)
                {
                    foreach (var item in Model.shippings)
                    { 
                        <tr>
                            <td>@item.AddressName</td>
                            <td>@item.Address</td>
                            <td align="center">
                                @Html.ActionLink("Edit", "EditShippingAddress", new { id = item.ShippingID })
                                @Html.Label(" | ")
                                @Html.ActionLink("Delete", "DeleteShippingAddress", new { id = item.ShippingID })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>