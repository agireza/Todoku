@model Todoku.Models.Product
           
@{
    ViewBag.Title = "Todoku";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@{Html.RenderAction("Breadcrumbs", "PartialView", new {area = ""});}
<h2>@Model.ProductName</h2>

<div class="product">
    <div class="product-detail">
        <div class="img-wrapper" style="float:left;">
            <img alt="Image not found" style="min-height:298px; max-height:298px; min-width:312px; max-width:312px;" src='@Url.Content(@Model.ImgLink)' onError="this.src='@Url.Content("~/Uploads/Todoku/Produk/Default/img_not_found.jpg")'"/>
            <div class="img-thumb">
                <ul style="list-style-type:none; padding:0;margin:0;">
                    <li style="display: inline;"><img alt="Image not found" style="max-height:75px; max-width:75px;" src='@Url.Content(@Model.ImgLink)' onError="this.src='@Url.Content("~/Uploads/Todoku/Produk/Default/img_not_found.jpg")'"/></li>
                    <li style="display: inline;" ><img alt="Image not found" style="max-height:75px; max-width:75px;" src='@Url.Content(@Model.ImgLink)' onError="this.src='@Url.Content("~/Uploads/Todoku/Produk/Default/img_not_found.jpg")'"/></li>
                    <li style="display: inline;" ><img alt="Image not found" style="max-height:75px; max-width:75px;" src='@Url.Content(@Model.ImgLink)' onError="this.src='@Url.Content("~/Uploads/Todoku/Produk/Default/img_not_found.jpg")'"/></li>
                    <li style="display: inline;" ><img alt="Image not found" style="max-height:75px; max-width:75px;" src='@Url.Content(@Model.ImgLink)' onError="this.src='@Url.Content("~/Uploads/Todoku/Produk/Default/img_not_found.jpg")'"/></li>
                </ul>
            </div>
        </div>
        <div class="buy-panel" style="float:left; margin-left : 10px;">
            <div>
                <table>
                    <tr>
                        <td>@Html.LabelFor(model => model.detail.Price)</td>
                        <td>:</td>
                        <td>@Html.DisplayFor(model => model.detail.Price)</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(model => model.detail.Quantity)</td>
                        <td>:</td>
                        <td>@Html.DisplayFor(model => model.detail.Quantity)</td>
                    </tr>
                </table>
            </div>
            @{Html.RenderAction("AddToCart", "PartialView", new { area = "", ProductID = Model.ProductID });}
        </div>
        <div class="ProductDesc" style="width:100%; float:left;">
            <div class="tabs">
                <ul>
                    <li><a href="#tabs-info">Informasi Produk</a></li>
                    <li><a href="#tabs-spec">Spesifikasi</a></li>
                    <li><a href="#tabs-review">Review</a></li>
                </ul>

                <div id="tabs-info" style="text-align:justify">
                    @Html.DisplayWithBreaksFor(model => model.Description)
                </div>
                <div id="tabs-spec">
                    Spesifikasi
                </div>
                <div id="tabs-review">
                    Review
                </div>
            </div>
        </div>
    </div>
</div>
